{
  "name": "git-hooks-nodejs",
  "version": "1.0.0",
  "description": "Demonstrate auto git hooks using helper packages",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "success-message": "echo Thanks for committing $GIT_AUTHOR_NAME"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glynester/git-hooks-nodejs.git"
  },
  "keywords": [
    "git hooks",
    "node"
  ],
  "author": "gb",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/glynester/git-hooks-nodejs"
  },
  "homepage": "https://github.com/glynester/git-hooks-nodejs#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "npm run success-message"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --findRelatedTests"
    ]
  },
  "commitlint": {
    "rules": {
      "references-empty": [2, "never"]
    },
    "parserPreset": {
      "parserOpts": {
        "issuePrefixes": ["ISSUE-"]
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^4.3.8",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4"
  }
}
